<MainScreen>:
    color: "white"
    BoxLayout:
        # Title 
        orientation: "vertical"
        Label:
            halign: "center"
            valign: "center"
            text: "Grocery Pal"
            size_hint_y: 0.1
            font_size: "32dp"
            color: "black"
        # Lower division will be scrolling layout
        MainScreenLower:


<MainScreenLower>:
    MainScreenLowerScroll:
    Button:
        id: confirm_add_food_button
        text: "Add Food"
        pos_hint: {"right": 0, "y": 0.16}
        size_hint: 0.2, 0.05
        on_release:
            app.root.current = "add_food_screen"
    ToggleButton:
        id: toggle_food_button
        text: "+"
        pos_hint: {"x":0.9, "y":0.1}
        size_hint: 0.05, 0.05
        on_state: 
            root.update_confirm_button_position()
        

<FoodCardsList>:
    id: food_cards_list
    size_hint_y: None
    height: self.minimum_height


<AddFoodScreen>:
    GridLayout:
        rows: 4
        AddFoodScreenTitle:
            size_hint_y: 0.2
        Label:
            size_hint_y: 0.03
        AddFoodScreenForm:
            size_hint_y: 0.67
        AddFoodScreenSaveBack:
            size_hint_y: 0.1
